extends layout.pug
include utils.pug
block content
  link(rel="stylesheet" href="/stylesheets/create-article.css")
  +validationErrorSummary(errors)
  form(id="createArticle" action='/articles/create' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)

    +field('Title', 'title', article.title, "text", "titleClass")

    +field('ImageUrl', 'imageURL', article.imageURL, "text", "urlClass")
    textarea(placeholder= "Type your article here..." id="typeArticle" name="body", cols="30", rows="10")= article.body
    div(class="cancelcreate")
      a(href='/' id='cancel') Cancel
      button(type='submit' id='create') Create
