extends layout.pug
include utils.pug
block content
  link(rel="stylesheet" href="/stylesheets/create-article.css")
  link(rel="stylesheet" href="/stylesheets/errors.css")
  +validationErrorSummary(errors)
  form(id="createArticle" action='/articles/create' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    label(id='titlelabel') Title
    +field(null, 'title', article.title, "text", "titleClass")
    label(id='imglabel') Image URL *image must be a link with 'jpg' 'jpeg' or 'png' formatting
    +field(null, 'imageURL', article.imageURL, "text", "urlClass")
    label(id='contentlabel') Content
    textarea(placeholder= "Type your article here...", id="typeArticle" name="body", cols="30", rows="10")= article.body
    div(class="cancelcreate")
      button(type='submit' id='create') Submit
      a(href='/' id='cancel') Cancel
