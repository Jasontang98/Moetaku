extends layout.pug
include utils.pug
block content
  +validationErrorSummary(errors)
  form(action='/articles/create' method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    +field('Title', 'title', article.title)
    +field('ImageUrl', 'imageURL', article.imageURL)
    label Body
    textarea(name="body", cols="30", rows="10")= article.body
    div
      button(type='submit' id='create') Create
      a(href='/' id='cancel') Cancel
